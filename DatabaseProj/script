CREATE TABLE usuarios (
                          cdUser SERIAL PRIMARY KEY NOT NULL,
                          email VARCHAR(50) NOT NULL ,
                          senha VARCHAR(50) NOT NULL CHECK (LENGTH (senha)>=8),
                          nomeCompleto VARCHAR(50) NOT NULL,
                          genero VARCHAR(50) NOT NULL ,
                          dataNascimento DATE NOT NULL CHECK ( dataNascimento < current_date ),
                          tipoAlimentacao VARCHAR(50) NOT NULL

);

CREATE TABLE alunos (
                        nomeCompleto VARCHAR(50) NOT NULL,
                        email VARCHAR(50) NOT NULL,
                        ano INT NOT NULL,
                        serie CHAR NOT NULL,
                        genero VARCHAR(20) NOT NULL,
                        data_nascimento DATE NOT NULL CHECK ( data_nascimento < current_date ),
                        escolaridade_pais VARCHAR(50) NOT NULL ,
                        tipo_alimentacao VARCHAR(20) NOT NULL ,
                        nota_exatas REAL NOT NULL CHECK ( nota_exatas >= 0 ),
                        nota_linguagens REAL NOT NULL CHECK ( nota_linguagens >= 0 ),
                        nota_ciencias REAL NOT NULL CHECK ( nota_ciencias >= 0 ),
                        media_geral REAL,
                        rank_geral INT,
                        desempenho VARCHAR(20),
                        status_exatas VARCHAR(20),
                        status_linguagens VARCHAR(20),
                        status_ciencias VARCHAR(20),
                        status_final VARCHAR(20),
                        data_prova DATE,
                        cdId INT NOT NULL,
                        FOREIGN KEY (cdId) REFERENCES usuarios(cdUser)
);